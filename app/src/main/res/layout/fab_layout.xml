<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/fab_main_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

        <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_main"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                app:backgroundTint="@color/colorGDTA"
                app:fabSize="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/baseline_add_white_24dp"/>

        <LinearLayout
                android:gravity="center"
                android:id="@+id/layout_job"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="110dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:text="job"
                    android:paddingRight="10dp"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvJob"/>

            <android.support.design.widget.FloatingActionButton
                    app:backgroundTint="@color/colorJob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/job"
                    android:id="@+id/fab_job"/>

        </LinearLayout>

        <LinearLayout
                android:gravity="center"
                android:id="@+id/layout_tool"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="100dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:text="tool"
                    android:paddingRight="10dp"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTool"/>

            <android.support.design.widget.FloatingActionButton
                    app:backgroundTint="@color/colorTool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/tool_new"
                    android:id="@+id/fab_tool"/>

        </LinearLayout>

        <LinearLayout
                android:gravity="center"
                android:id="@+id/layout_battery"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="70dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="70dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:text="battery"
                    android:paddingRight="10dp"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvBattery"/>

            <android.support.design.widget.FloatingActionButton
                    app:backgroundTint="@color/colorBattery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/battery_new"
                    android:id="@+id/fab_battery"/>

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>


</LinearLayout>