<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/backColorJobPrecise"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_margin="3dp"
            android:gravity="center"
            android:background="@drawable/edittext_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tvTitle"
                android:padding="7dp"
                android:textSize="22dp"
                android:text="Inserting battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:layout_margin="3dp"
            android:id="@+id/linLayoutUp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
                android:minWidth="140dp"
                android:hint="Serial N 1"
                android:id="@+id/edSerial1"
                android:background="@drawable/edittext_shape"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorLink="@android:color/background_dark"/>

        <EditText
                android:hint="Invoice"
                android:background="@drawable/edittext_shape"
                android:id="@+id/edInvoice"
                android:layout_weight="1"
                android:padding="7dp"
                android:textAlignment="center"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        <EditText
                android:hint="Box N"
                android:background="@drawable/edittext_shape"
                android:id="@+id/edBox"
                android:layout_weight="1"
                android:padding="7dp"
                android:textAlignment="center"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/linLayoutForBoth"
                android:orientation="vertical"
                android:layout_weight="20"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:id="@+id/linLayoutLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backColorLayouts"
                    android:orientation="vertical">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:minWidth="140dp"
                            android:padding="7dp"
                            android:background="@drawable/edittext_shape"
                            android:text="Serial 2:"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    <EditText
                            android:padding="7dp"
                            android:background="@drawable/edittext_shape"
                            android:id="@+id/tvSerNum2"
                            android:text=""
                            android:textSize="16dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:minWidth="140dp"
                            android:padding="7dp"
                            android:background="@drawable/edittext_shape"
                            android:text="Serial 3:"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    <EditText
                            android:padding="7dp"
                            android:background="@drawable/edittext_shape"
                            android:id="@+id/tvSerNum3"
                            android:text=""
                            android:textSize="16dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:minWidth="140dp"
                            android:padding="7dp"
                            android:background="@drawable/edittext_shape"
                            android:text="Manufactured:"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <EditText
                            android:padding="7dp"
                            android:background="@drawable/edittext_shape"
                            android:id="@+id/tvManuf"
                            android:text="17/11/2016"
                            android:textSize="16dp"
                            android:layout_weight="4"
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:padding="7dp"
                            android:minWidth="140dp"
                            android:background="@drawable/edittext_shape"
                            android:text="Location:"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <EditText
                            android:padding="7dp"
                            android:background="@drawable/edittext_shape"
                            android:id="@+id/tvLocation"
                            android:text="SLB, GYLS-001"
                            android:textSize="16dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/linLayoutBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/backColorLayouts">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:minWidth="140dp"
                            android:padding="7dp"
                            android:background="@drawable/edittext_shape"
                            android:text="Condition:"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <EditText
                            android:padding="7dp"
                            android:background="@drawable/edittext_shape"
                            android:id="@+id/tvCondition"
                            android:hint="N / U"
                            android:textAlignment="center"
                            android:textSize="16dp"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_margin="5dp"
                    android:id="@+id/linLayoutRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/backColorLayouts">



                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView

                            android:text="Comments:"
                            android:textSize="16dp"
                            android:layout_weight="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <EditText
                            android:padding="7dp"
                            android:background="@drawable/edittext_shape"
                            android:id="@+id/tvComments"
                            android:text="RU1750"
                            android:textSize="16dp"
                            android:layout_weight="4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabAddBattery"
                app:srcCompat="@drawable/done"
                android:backgroundTint="@color/colorPrimary"
                app:fabSize="normal"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="bottom|end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>