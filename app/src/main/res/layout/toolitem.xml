<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/layoutInner"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/border"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/linLayoutUp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tvToolItem"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:text="Gyro Section"
                    android:textAlignment="textStart"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tvToolAsset"
                    android:layout_weight="1"
                    android:text="G0211H"
                    android:textAlignment="textStart"
                    android:layout_marginRight="10dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tvToolCircHrs"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:text="C/h: 53.73"
                    android:textAlignment="textEnd"
                    android:layout_marginRight="10dp"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:background="@color/backColorLayouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_marginLeft="5dp"
                    android:text="Arrived:"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tvArrived"
                    android:text="21/11/2017"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:textSize="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:background="@color/backColorLayouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_marginLeft="5dp"
                    android:text="Invoice:"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tvInvoice"
                    android:text="O/21/11"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:textSize="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>